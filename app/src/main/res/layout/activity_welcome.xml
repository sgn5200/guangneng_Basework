<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.globalroam.gruc.enterprise.mvp.WelcomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:alignContent="center"
        app:alignItems="center"
        app:flexWrap="wrap">

        <TextView
            android:id="@+id/textview1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#bcd"
            android:text="abad"
            app:layout_flexBasisPercent="80%" />

        <TextView
            android:id="@+id/textview2"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="#567"
            android:text="abaaaaad"
            app:layout_alignSelf="center"

            />

        <TextView
            android:id="@+id/textview3"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="#afd"
            android:text="abaaaad"
            app:layout_alignSelf="flex_end" />


    </com.google.android.flexbox.FlexboxLayout>

</LinearLayout>
